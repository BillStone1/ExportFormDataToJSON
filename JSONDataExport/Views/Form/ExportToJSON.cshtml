@model JSONDataExport.Models.FormDataModel

@{
    ViewData["Title"] = "ExportToJSON";
}

<hr />

<div class="text-center">
    <h4 class="display-4" style="font-size:xx-large;">EXPORT FORM DATA TO JSON</h4>
</div>

<br />
<br />
<div class="row" style="align-items:center; align-content:center; vertical-align:central">
    <div class="col-md-4">
        <form asp-action="ExportToJSON">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstName"  class="control-label" style="font-weight:500">FIRST NAME</label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label" style="font-weight:500">LAST NAME</label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <br />
            <br />
            <div class="form-group">
                <input type="submit" value="EXPORT" style="font-weight:bold" class="btn btn-primary" />
            </div>
            <br />
            @if(ViewBag.SuccessMessage != null)
            {
            <div style="color:green;font-style:italic;font-weight:bold;font-variant-caps:normal">
                @ViewBag.SuccessMessage
            </div>
            }
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
